{
    "name": "PeerSoundProject",
    "version": "0.1",
    "description": "r√©seau de partage et de streaming de musique",
    "manifest_version": 2,
    "icons": {
        "16": "images/psp.png",
        "48": "images/psp.png",
        "128": "images/psp.png"
    },
    "permissions": ["unlimitedStorage", "background", "tabs", "<all_urls>", "activeTab"],
    "content_scripts": [{
        "matches": ["http://*/*", "https://*/*", "*://*/*"],
        "css": ["src/css/show_doggy.css"],
        "all_frames": true
    }],
    "web_accessible_resources": [
        "index.html", "src/js/index.js", "profil.html", "takeMusic.html", "SendMusic.html", "content.js"
    ],
    "browser_action": {
        "default_icon" : "images/psp.png"
    },
    "background": {
        "default_icon" : "images/psp.png",
         "scripts": ["background.js"]
    }
}
